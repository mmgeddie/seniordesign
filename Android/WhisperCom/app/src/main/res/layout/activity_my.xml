<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Transmit:"
        android:id="@+id/textViewTransmitHeader"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TransmitLog"
        android:id="@+id/textViewTransmitLog"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonS"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Receive:"
        android:id="@+id/textViewReceiveHeader"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewTransmitLog"
        android:layout_marginTop="10dp"/> />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ReceiveAllMonitor"
        android:id="@+id/textViewReceiveAllMonitor"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewReceiveHeader"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ReceiveFilterLog"
        android:id="@+id/textViewReceiveFilterLog"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewReceiveAllMonitor"
        android:layout_marginTop="10dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/button1"
        android:text="1"
        android:onClick="playTone"
        android:layout_marginTop="30dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/button2"
        android:text="2"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/button3"
        android:text="3"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button2"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/buttonA"
        android:text="A"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button3"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/button4"
        android:text="4"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/button5"
        android:text="5"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/button6"
        android:text="6"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button5"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/buttonB"
        android:text="B"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button6"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/button7"
        android:text="7"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button4"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/button8"
        android:text="8"
        android:layout_alignTop="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/button9"
        android:text="9"
        android:layout_alignTop="@+id/button7"
        android:layout_toRightOf="@+id/button8"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/buttonC"
        android:text="C"
        android:layout_alignTop="@+id/button7"
        android:layout_toRightOf="@+id/button9"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/buttonS"
        android:text="*"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button7"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/button0"
        android:text="0"
        android:layout_alignTop="@+id/buttonS"
        android:layout_toRightOf="@+id/buttonS"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/buttonP"
        android:text="#"
        android:layout_alignTop="@+id/buttonS"
        android:layout_toRightOf="@+id/button0"
        android:onClick="playTone" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dtmf_grid_button_size"
        android:layout_height="@dimen/dtmf_grid_button_size"
        android:id="@+id/buttonD"
        android:text="D"
        android:layout_alignTop="@+id/buttonS"
        android:layout_toRightOf="@+id/buttonP"
        android:onClick="playTone" />

</RelativeLayout>
